<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuanLyDaiLy.Views.AgencyAdd.AgencyAdd"
             Title="">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Tiêu đề + nút X cùng hàng -->
            <Grid Padding="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Label bên trái -->
                <Label Text="Tiếp nhận đại lý"
                       FontSize="36"
                       FontAttributes="Bold"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       TextColor="Black"
                       Grid.Column="0"/>

                <!-- Nút X bên phải -->
                <Button Clicked="OnExitClicked"
                        BackgroundColor="Transparent"
                        Padding="0"
                        WidthRequest="40"
                        HeightRequest="40"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        Grid.Column="1">
                    <Button.ImageSource>
                        <FontImageSource Glyph="✖"
                                         FontFamily="OpenSansRegular"
                                         Size="28"
                                         Color="Black"/>
                    </Button.ImageSource>
                </Button>
            </Grid>

            <!-- Khung form -->
            <Border Stroke="LightGray"
                    StrokeShape="RoundRectangle 10"
                    BackgroundColor="White"
                    Padding="15"
                    StrokeThickness="1">

                <Grid RowSpacing="12" ColumnSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Row 0 -->
                        <RowDefinition Height="Auto"/>
                        <!-- Row 1 -->
                        <RowDefinition Height="Auto"/>
                        <!-- Row 2 -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 0: Mã - Tên - Loại - Quận -->
                    <StackLayout Grid.Row="0" Grid.Column="0" Spacing="5">
                        <Label Text="Mã đại lý"/>
                        <Entry x:Name="txtMaDaiLy"
                           IsEnabled="False"
                           BackgroundColor="LightGray"
                           TextColor="Black"/>
                    </StackLayout>

                    <StackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                        <Label Text="Tên đại lý"/>
                        <Entry x:Name="txtTenDaiLy" Placeholder="Nhập tên đại lý"/>
                    </StackLayout>

                    <StackLayout Grid.Row="0" Grid.Column="2" Spacing="5">
                        <Label Text="Loại đại lý"/>
                        <Picker x:Name="pickerLoaiDaiLy"/>
                    </StackLayout>

                    <StackLayout Grid.Row="0" Grid.Column="3" Spacing="5">
                        <Label Text="Tên quận"/>
                        <Picker x:Name="pickerQuan"/>
                    </StackLayout>

                    <!-- Row 1: SĐT - Email - Ngày -->
                    <StackLayout Grid.Row="1" Grid.Column="0" Spacing="5">
                        <Label Text="Số điện thoại"/>
                        <Entry x:Name="txtDienThoai" Keyboard="Telephone" Placeholder="Nhập số điện thoại"/>
                    </StackLayout>

                    <StackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Spacing="5">
                        <Label Text="Email"/>
                        <Entry x:Name="txtEmail" Keyboard="Email" Placeholder="Nhập email"/>
                    </StackLayout>

                    <StackLayout Grid.Row="1" Grid.Column="3" Spacing="5">
                        <Label Text="Ngày tiếp nhận"/>
                        <DatePicker x:Name="dateNgayTiepNhan"/>
                    </StackLayout>

                    <!-- Row 2: Địa chỉ -->
                    <StackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Spacing="5">
                        <Label Text="Địa chỉ"/>
                        <Entry x:Name="txtDiaChi" Placeholder="Nhập địa chỉ"/>
                    </StackLayout>
                </Grid>
            </Border>

            <!-- Nút hành động -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="25">

                <!-- Nút tiếp nhận -->
                <Button Text="Tiếp nhận"
                        Clicked="OnSaveAgencyClicked"
                        BackgroundColor="#0EAAFD"
                        TextColor="White"
                        Padding="10"
                        CornerRadius="8">
                    <Button.ImageSource>
                        <FontImageSource Glyph="➕"
                                         FontFamily="OpenSansRegular"
                                         Size="18"
                                         Color="White"/>
                    </Button.ImageSource>
                </Button>

                <!-- Nút làm mới -->
                <Button Text="Đại lý mới"
                        Clicked="OnResetClicked"
                        BackgroundColor="#0EAAFD"
                        TextColor="White"
                        CornerRadius="8">
                    <Button.ImageSource>
                        <FontImageSource Glyph="🔄"
                                         FontFamily="OpenSansRegular"
                                         Size="18"
                                         Color="White"/>
                    </Button.ImageSource>
                </Button>

                <!-- Nút thoát -->
                <Button Text="Thoát"
                        Clicked="OnExitClicked"
                        BackgroundColor="#0EAAFD"
                        TextColor="White"
                        CornerRadius="8">
                    <Button.ImageSource>
                        <FontImageSource Glyph="🚪"
                                         FontFamily="OpenSansRegular"
                                         Size="18"
                                         Color="White"/>
                    </Button.ImageSource>
                </Button>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
